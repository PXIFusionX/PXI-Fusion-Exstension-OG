{
    "manifest_version": 3,
    "name": "PXI Fusion",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      },
      "default_title": "PXI Fusion Menu"
    },
    "permissions": ["activeTab", "storage", "scripting"],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [{
      "resources": ["*.png"],
      "matches": ["<all_urls>"]
    }],
    "host_permissions": [
      "*://*.prodigygame.com/*"
    ],
    "declarative_net_request": {
      "rule_resources": [{
        "id": "rules",
        "enabled": true,
        "path": "rules.json"
      }]
    }
  }
  